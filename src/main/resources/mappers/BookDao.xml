<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.neolyao.bookstore.dao.BookDao">

    <select id="getBooksByCid" resultType="com.neolyao.bookstore.pojo.Book">
        select  * from  t_book
        where cid=#{cid}
    </select>
    <select id="findByBid" resultType="com.neolyao.bookstore.pojo.Book">
        select * from t_book
        where bid=#{bid}
    </select>
</mapper>